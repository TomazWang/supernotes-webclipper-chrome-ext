{
    "manifest_version": 3,
    "name": "Supernotes Web Clipper",
    "version": "1.0",
    "description": "Unofficial web clipper extension of Supernotes",
    "permissions": ["activeTab", "storage"],
    "action": {
        "default_icon": "icon.png"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "48": "icon.png",
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ]
}
